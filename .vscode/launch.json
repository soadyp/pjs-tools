    "version": "0.2.0",
    "configurations": [
        {
            "name": "App.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/app.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "NEO4J_PASSWORD": "${env:NEO4J_PASSWORD}"
            }
        },
        {
            "name": "python file",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/${relativeFile}",
            "console": "integratedTerminal",
            "env": {
                "NEO4J_PASSWORD": "${env:NEO4J_PASSWORD}"
            }
        }
    ]
}