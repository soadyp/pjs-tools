# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=yourpassword
NEO4J_DATABASE=neo4j

# Ollama Configuration
OLLAMA_URL=http://127.0.0.1:11434
OLLAMA_EMBED_MODEL=bge-m3
OLLAMA_EMBED_DIM=1024
OLLAMA_CHAT_MODEL=mistral:7b

# Alternative: Use smaller models for testing
# OLLAMA_EMBED_MODEL=nomic-embed-text
# OLLAMA_EMBED_DIM=768
# OLLAMA_CHAT_MODEL=qwen2.5:3b

# Source Documents Directory
# For host: absolute path on your machine
# For container: will be mapped to /app/documents
SOURCE_DIR=/mnt/ubuntustore/RAG-Docs

# API Configuration
API_PORT=8000

# Chunking Parameters
CHUNK_TOKENS=1000
CHUNK_OVERLAP=150
